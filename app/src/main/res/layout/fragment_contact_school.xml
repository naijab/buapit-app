<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    tools:context="th.ac.buapit.buaproid.activities.fragment.moremenu.fragment.ContactSchoolFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_big"
            android:layout_marginTop="@dimen/dimen_big"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/CardView.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_big">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_contact_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_xxx"
                        android:text="@string/school_name"
                        android:textColor="@color/grey_800"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_xxx"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_contact_school_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_xxx"
                        android:layout_marginTop="@dimen/dimen_big"
                        android:text="@string/school_address"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_bigger" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_normal"
                        android:layout_marginRight="@dimen/dimen_normal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_contact_facebook"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_super_x"
                            android:layout_marginBottom="@dimen/dimen_big"
                            android:layout_marginLeft="@dimen/dimen_normal"
                            android:layout_marginRight="@dimen/dimen_normal"
                            android:layout_weight="1"
                            android:background="@color/indigo_700"
                            android:text="@string/facebook"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_big" />

                        <Button
                            android:id="@+id/btn_contact_website"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_super_x"
                            android:layout_marginBottom="@dimen/dimen_big"
                            android:layout_marginLeft="@dimen/dimen_normal"
                            android:layout_marginRight="@dimen/dimen_normal"
                            android:layout_weight="1"
                            android:background="@color/orange_700"
                            android:text="@string/website"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_big" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_normal"
                        android:layout_marginRight="@dimen/dimen_normal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_contact_gps"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_super_x"
                            android:layout_marginBottom="@dimen/dimen_big"
                            android:layout_marginLeft="@dimen/dimen_normal"
                            android:layout_marginRight="@dimen/dimen_normal"
                            android:layout_weight="1"
                            android:background="@color/red_500"
                            android:text="@string/gps"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_big" />

                        <Button
                            android:id="@+id/btn_contact_call"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_super_x"
                            android:layout_marginBottom="@dimen/dimen_big"
                            android:layout_marginLeft="@dimen/dimen_normal"
                            android:layout_marginRight="@dimen/dimen_normal"
                            android:layout_weight="1"
                            android:background="@color/green_600"
                            android:text="@string/dial_call"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_big" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/CardView.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_bigger">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_super_xxx"
                        android:layout_height="@dimen/dimen_super_xxx"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_extra"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_xxx"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_contact_app_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_super_xx"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_xx" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
