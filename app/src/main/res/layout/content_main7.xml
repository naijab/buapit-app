<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="th.ac.buapit.app.MainActivity7"
    tools:showIn="@layout/activity_main7">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/LayoutLinearAddPermitAll">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/LayoutLinearAddPermit0"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/TextLabelAddPermit"
                    android:id="@+id/label_add_permit0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_add_permit0" />

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:minWidth="90dp"
                    android:id="@+id/spin_add_permit_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/TextLabelAddPermit"
                    android:id="@+id/label_add_permit3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_add_permit0_1" />

                <Spinner
                    android:layout_marginLeft="10dp"
                    android:minWidth="90dp"
                    android:id="@+id/spin_add_permit_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutLinearAddPermit1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextLabelAddPermit"
                android:id="@+id/label_add_permit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_add_permit1"
                />
            <EditText
                android:id="@+id/edit_add_permit1"
                android:inputType="number"
                android:maxLength="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_add_permit1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutLinearAddPermit2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextLabelAddPermit"
                android:id="@+id/label_add_permit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_add_permit2" />
            <EditText
                android:shadowColor="#3333"
                android:id="@+id/edit_add_permit2"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_add_permit2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutLinearAddPermit3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextLabelAddPermit"
                android:id="@+id/label_add_permit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_add_permit3" />
            <EditText
                fontPath="fonts/NotoSansThaiUI_Regular.ttf"
                android:textSize="16sp"
                android:lineSpacingExtra="5dp"
                android:shadowColor="#3333"
                android:id="@+id/edit_add_permit3"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:ems="10"
                android:hint="@string/hint_add_permit3" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
