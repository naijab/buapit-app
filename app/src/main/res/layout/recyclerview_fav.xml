<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_big"
    android:paddingBottom="@dimen/dimen_none"
    android:paddingLeft="@dimen/dimen_big"
    android:paddingRight="@dimen/dimen_big"
    android:paddingTop="@dimen/dimen_big"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dimen_normal"
    app:cardElevation="@dimen/dimen_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        card_view:layout_height="match_parent"
        card_view:layout_width="match_parent">

        <ImageView
            android:id="@+id/image_fav"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_fav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_big"
            android:padding="@dimen/dimen_normal"
            android:text="@string/lorem_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_big"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>

