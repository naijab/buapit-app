<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview_item_recyclerview_home"
    style="@style/CardView.White"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_item_recyclerview_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:layout_height="wrap_content"
        card_view:layout_width="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dimen_normal"
            android:id="@+id/x_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_small"
            android:ellipsize="end"
            android:padding="@dimen/dimen_normal"
            android:singleLine="true"
            android:text="New Text"
            android:textColor="@color/grey_600"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/x_date"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/x_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_img"
            android:layout_marginBottom="@dimen/dimen_none"
            android:layout_marginTop="@dimen/dimen_big"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dimen_normal"
            android:paddingRight="@dimen/dimen_normal"
            android:singleLine="true"
            android:text="New Text"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/x_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/x_title"
            android:layout_marginBottom="@dimen/dimen_small"
            android:ellipsize="end"
            android:padding="@dimen/dimen_normal"
            android:singleLine="true"
            android:text="New Text"
            android:textColor="@color/grey_600"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

